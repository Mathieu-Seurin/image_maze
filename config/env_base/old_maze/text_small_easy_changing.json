{
  "name": "text_small_easy_changing",
  "success_threshold": 0.60,
  "env_type":
  {
    "n_row": 3,
    "n_col": 2,
    "n_zone": 4,
    "state_type" : "surrounding",
    "change_maze" : 2,
    "maze_type" : "zone",
    "time_penalty" : false,
    "objective" : {
      "type" : "text",
      "text_difficulty" : "easy",

      "curriculum":
      {
        "n_objective" : 2,
        "change_every" : 1
      }

    }
  },
  "train_params": {
    "epsilon_schedule": ["exp", 0.95],
    "n_epochs" : 3000,
    "test_every": 100,
    "n_epochs_test": 7
  },

  "io": {
    "verbosity": 1,
    "num_epochs_to_store": 0
  }
}
